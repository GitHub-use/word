<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300sp"
    android:layout_height="500sp"
    android:orientation="vertical"
    android:id="@+id/mydialog_linearlayout">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/mydialog_textview_en"
        android:text="123"
        android:textColor="#000000"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="10sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/mydialog_textview_ch"
        android:text="123"
        android:textColor="#000000"
        android:layout_below="@id/mydialog_textview_en"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="5sp"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:layout_below="@id/mydialog_textview_ch"
        android:background="#000000"
        android:id="@+id/mydialog_view"/>
    <WebView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mydialog_view"
        android:layout_above="@id/mydialog_button_linear"
        android:id="@+id/mydialog_textview"

        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:id="@+id/mydialog_button_linear"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mydialog_delete"
            android:text="删除"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改"
            android:id="@+id/mydialog_change"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改"
            android:id="@+id/mydialog_play"/>
    </LinearLayout>

</RelativeLayout>
